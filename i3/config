set $right l

set $term alacritty
set $browser firefox
set $exe exec --no-startup-id

gaps inner 0
gaps outer 0

for_window [class="^.*"] border pixel 3

smart_gaps on
hide_edge_borders smart
popup_during_fullscreen smart
focus_follows_mouse no
default_orientation horizontal
workspace_layout tabbed

