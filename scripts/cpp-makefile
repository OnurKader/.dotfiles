CC=g++
CFLAGS= -g -std=c++17 -Wall -Wextra -Wpedantic -O3

all: clean build

clean:
	rm -f ../bin/* ./*.o

%.o: %.cpp
	$(CC) -c $(CFLAGS) $<

build: <++>.o
	$(CC) -o ../bin/<++> <++>.o

run: ../bin/<++>
	clear && ../bin/<++>

install: <++>
	sudo ln -sf /home/beronthecolossus/Peki/C++/Projects/<++> /usr/local/bin/<++>
