CC=g++
CFLAGS= -g -std=c++17 -Wall -Wextra -Wshadow -Wpedantic -O3

all: clean build

clean:
	rm -f ../bin/*

../bin/%.o: %.cpp
	$(CC) -c $(CFLAGS) $< -o ../bin/$@

build: ../bin/main.o
	$(CC) -o ../bin/main ../bin/main.o

run: ../bin/main
	clear && ../bin/main

install: ../bin/main
	sudo ln -sf /home/beronthecolossus/Peki/C++/Projects/<++>/bin/main /usr/local/bin/<++>
