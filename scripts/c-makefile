CC=gcc
CFLAGS= -g -std=c11 -Wall -Wextra -Wpedantic -Wshadow -O3

all: build

clean:
	rm -f ../bin/*

../bin/%.o : %.c
	$(CC) -c $(CFLAGS) $< -o ../bin/$@

build: ../bin/main.o
	$(CC) -o ../bin/main ../bin/main.o

run: ../bin/main
	../bin/main

install: ../bin/main
	cp ../bin/main /usr/local/bin/<++>

