#!/bin/bash
pgrep -i "spotify" >/dev/null || echo "UwU"
NAME="$(sp eval | grep -i "TITLE" | cut -d= -f2)"
ARTIST="$(sp eval | grep -i "_ARTIST" | cut -d= -f2)"
SONG="$ARTIST - $NAME"
SONG="${SONG//\"/}"
STR_LEN=${#SONG}
if [ "$STR_LEN" -gt 26 ] ; then
	echo -n "$(echo "$SONG" | cut -b-26)..." | iconv -f utf8 -t ascii//TRANSLIT//IGNORE | sed 's/\&/and/g'
else
	echo -n "$SONG" | iconv -f utf8 -t ascii//TRANSLIT//IGNORE | sed 's/\&/and/g'
fi

case $BLOCK_BUTTON in
	1) notify-send "ï†¼ ${NAME//\"/}" "${ARTIST//\"/}" ;;
	2) notify-send "???" "Why would you Middle-Click on this?!";;
	3) notify-send "Usage:" "Just Left Click To Get The Whole Song Name";;
esac

