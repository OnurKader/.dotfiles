#!/bin/sh

# %(playlist)s/%(playlist_index)s

yt-dlp --add-metadata --sponsorblock-mark all \
--download-archive="$HOME/.cache/youtube-dl/download-archive.txt" --embed-subs --write-auto-sub \
--sub-langs='en.*' -ciwo '[%(upload_date,release_date)s] %(title)s :: %(height)dp (%(id)s).%(ext)s' -f 'bestvideo[height<=1080]+bestaudio/best' $@

