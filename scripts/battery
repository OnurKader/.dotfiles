#!/bin/bash

START_COL="#FF0808"
END_COL="#08FF08"

PERC="$(acpi -b | awk '{print $4}' | sed s/,//)"
PERC_INT=${PERC//\%/}
[ "$(acpi -b | grep -i 'Discharging')" ] || DISC=" "

if   [ "$PERC_INT" -ge 90 ]; then SYMBOL="";
elif [ "$PERC_INT" -ge 75 ]; then SYMBOL="";
elif [ "$PERC_INT" -ge 50 ]; then SYMBOL="";
elif [ "$PERC_INT" -ge 25 ]; then SYMBOL="";
else SYMBOL=""
fi

# Arguments => "Current Percentage, Zero Percent Color ('#ABCDEF' format), Full Percentage Color"
function getColor {
	local r;
	local g;
	local b;
	local temp;
	local ratio;
	ratio=$(bc -l <<< "scale=2; $1/100")
	# Extract zero rgb and full rgb and convert to hex
	local rz=$(( 16#$(echo "$2" | cut -b2-3) ))
	local gz=$(( 16#$(echo "$2" | cut -b4-5) ))
	local bz=$(( 16#$(echo "$2" | cut -b6-7) ))
	local rf=$(( 16#$(echo "$3" | cut -b2-3) ))
	local gf=$(( 16#$(echo "$3" | cut -b4-5) ))
	local bf=$(( 16#$(echo "$3" | cut -b6-7) ))
	temp=$((rf+rz))
	r=$(bc -l <<< "scale=2; $temp*$ratio")
	temp=$((gf+gz))
	g=$(bc -l <<< "scale=2; $temp*$ratio")
	temp=$((bf+bz))
	b=$(bc -l <<< "scale=2; $temp*$ratio")
	r=$(echo "$r" | cut -f1 -d.)
	g=$(echo "$g" | cut -f1 -d.)
	b=$(echo "$b" | cut -f1 -d.)
	r=$((r-rz)); r=${r#-}
	g=$((g-gz)); g=${g#-}
	b=$((b-bz)); b=${b#-}
	color=$(printf "#%02X%02X%02X" "$r" "$g" "$b")
}

getColor "$PERC_INT" "$START_COL" "$END_COL"


TIME="$(acpi -b | cut -d, -f3 | cut -b1-9)"

case $BLOCK_BUTTON in
	1)  if [ "$(acpi -b | grep "Discharging")" ] ; then
			notify-send "Remaining Time" "$TIME" &
			DISC=""
		else
			notify-send "Time Until Charged" "$TIME" &
			DISC=" "
		fi ;;
	2) ;;
	3) ;;
esac

[ "$PERC_INT" -le 12 ] && notify-send --urgency=critical "WARNING" "LOW BATTERY!  $PERC"

echo -n "<span foreground='$color'>$SYMBOL $PERC</span><span foreground='#FCFC12'>$DISC</span>"
